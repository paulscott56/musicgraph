<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    https://raw.github.com/impetus-opensource/Kundera/Kundera-2.0.4/kundera-core/src/test/resources/META-INF/persistence_2_0.xsd"
    version="2.0">
    <!-- Persistence Units for musicgraph application -->
    <persistence-unit name="musicgraph">
        <provider>com.impetus.kundera.KunderaPersistence</provider>
        <class>za.co.paulscott.musicgraph.entities.artist.Artist</class>
        <class>za.co.paulscott.musicgraph.entities.artist.ArtistAlias</class>
        <class>za.co.paulscott.musicgraph.entities.artist.ArtistDate</class>
        <class>za.co.paulscott.musicgraph.entities.artist.IPICode</class>
        <class>za.co.paulscott.musicgraph.entities.artist.SpecificLocale</class>
        <properties>            
            <property name="kundera.nodes" value="localhost" />
            <property name="kundera.port" value="7474" />
            <property name="kundera.datastore.file.path" value="target/musicgraph.db" />          
            <property name="kundera.dialect" value="neo4j" />
            <property name="kundera.client.lookup.class"
                value="com.impetus.client.neo4j.Neo4JClientFactory" />
            <property name="kundera.cache.provider.class"
                value="com.impetus.kundera.cache.ehcache.EhCacheProvider" />
            <property name="kundera.cache.config.resource" value="/ehcache-test.xml" />
            <property name="kundera.client.property" value="kunderaNeo4JTest.xml"/>
            <property name="kundera.transaction.resource.class" value="com.impetus.client.neo4j.Neo4JTransaction" />
        </properties>
    </persistence-unit>
    <persistence-unit name="musicgraphBatch">
        <provider>com.impetus.kundera.KunderaPersistence</provider>
        <properties>            
            <property name="kundera.nodes" value="localhost" />
            <property name="kundera.port" value="7474" />
            <property name="kundera.datastore.file.path" value="target/musicgraphBatch.db" />         
            <property name="kundera.dialect" value="neo4j" />
            <property name="kundera.client.lookup.class"
                value="com.impetus.client.neo4j.Neo4JClientFactory" />
            <property name="kundera.cache.provider.class"
                value="com.impetus.kundera.cache.ehcache.EhCacheProvider" />
            <property name="kundera.cache.config.resource" value="/ehcache-test.xml" />
            <property name="kundera.client.property" value="kunderaNeo4JTest.xml"/>
            <property name="kundera.transaction.resource.class" value="com.impetus.client.neo4j.Neo4JTransaction" />
            <property name="kundera.batch.size" value="5" />
        </properties>
    </persistence-unit>
</persistence>